{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(name)-40s - %(levelname)8s - %(message)s"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        }
    },

    "loggers": {
        "mconf_aggr.aggregator": {
            "level": "DEBUG",
            "handlers": [
                "console"
            ],
            "propagate": false
        },

        "mconf_aggr.zabbix.zabbix": {
            "level": "DEBUG",
            "handlers": [
                "console"
            ],
            "propagate": false
        },

        "mconf_aggr.webhook.db_operations": {
            "level": "DEBUG",
            "handlers": [
                "console"
            ],
            "propagate": false
        },

        "mconf_aggr.webhook.event_listener": {
            "level": "DEBUG",
            "handlers": [
                "console"
            ],
            "propagate": false
        },

        "zabbix_api": {
            "propagate": false
        },

        "sqlalchemy": {
            "propagate": false
        },
        "urllib3": {
            "propagate": false
        }
    },

    "root": {
        "level": "INFO",
        "handlers": [
            "console"
        ]
    }
}
